{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "âš¡ Show Generator Diagnostics",
      "command": "pwsh",
      "type": "shell",
      "args": [
        "${workspaceFolder}/scripts/show-diagnostics.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "build (show diagnostics)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/tests/Whizbang.Core.Tests/Whizbang.Core.Tests.csproj",
        "--no-incremental",
        "-v:detailed"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "test (with diagnostics)",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "${workspaceFolder}"
      ],
      "options": {
        "env": {
          "WHIZBANG_SHOW_DIAGNOSTICS": "1"
        }
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    }
  ]
}
