{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test: all",
      "command": "dotnet",
      "type": "process",
      "args": ["test"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "test: Core.Tests",
      "command": "dotnet",
      "type": "process",
      "args": ["test", "tests/Whizbang.Core.Tests"],
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "test: watch",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "test", "--project", "tests/Whizbang.Core.Tests"],
      "problemMatcher": "$msCompile",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
