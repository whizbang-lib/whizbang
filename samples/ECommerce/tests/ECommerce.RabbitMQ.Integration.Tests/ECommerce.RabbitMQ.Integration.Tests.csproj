<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>

    <!-- Enable source generator output for debugging -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(MSBuildProjectDirectory)/.whizbang-generated</CompilerGeneratedFilesOutputPath>

    <!-- RabbitMQ transport compiler directive -->
    <DefineConstants>RABBITMQ</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TUnit" />
    <PackageReference Include="TUnit.Assertions" />
    <PackageReference Include="Testcontainers.PostgreSql" />
    <PackageReference Include="Testcontainers.RabbitMq" />
    <PackageReference Include="Bogus" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../src/Whizbang.Core/Whizbang.Core.csproj" />
    <ProjectReference Include="../../../../src/Whizbang.Generators/Whizbang.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../../../src/Whizbang.Data.EFCore.Postgres/Whizbang.Data.EFCore.Postgres.csproj" />
    <ProjectReference Include="../../../../src/Whizbang.Data.EFCore.Postgres.Generators/Whizbang.Data.EFCore.Postgres.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../../../src/Whizbang.Transports.RabbitMQ/Whizbang.Transports.RabbitMQ.csproj" />
    <ProjectReference Include="../../../../src/Whizbang.Hosting.RabbitMQ/Whizbang.Hosting.RabbitMQ.csproj" />
    <ProjectReference Include="../../ECommerce.Contracts/ECommerce.Contracts.csproj" />
    <ProjectReference Include="../../ECommerce.InventoryWorker/ECommerce.InventoryWorker.csproj" />
    <ProjectReference Include="../../ECommerce.BFF.API/ECommerce.BFF.API.csproj" />
    <ProjectReference Include="../ECommerce.Integration.TestUtilities/ECommerce.Integration.TestUtilities.csproj" />
  </ItemGroup>

</Project>
