<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Whizbang.Data.EFCore.Postgres.Generators</RootNamespace>
    <LangVersion>latest</LangVersion>

    <!-- Mark as Roslyn component -->
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <IsRoslynComponent>true</IsRoslynComponent>

    <!-- Enable viewing generated files (for debugging) -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(MSBuildProjectDirectory)/.whizbang-generated</CompilerGeneratedFilesOutputPath>

    <!-- Enable performance reporting -->
    <ReportAnalyzer>true</ReportAnalyzer>

    <!-- Enable ILRepack to merge Shared DLL into generator DLL -->
    <ILRepackEnabled>true</ILRepackEnabled>

    <!-- Disable TypeForwardedTo generation for polyfills to avoid conflicts with .NET 10 test project -->
    <!-- See: https://github.com/Sergio0694/PolySharp/issues/103 -->
    <PolySharpExcludeTypeForwardedToDeclarations>true</PolySharpExcludeTypeForwardedToDeclarations>
    <!-- NuGet packaging: Place in analyzers folder, not lib -->
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <DevelopmentDependency>true</DevelopmentDependency>
    <!-- Use target to add analyzer DLL to correct path -->
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);PackAnalyzerDll</TargetsForTfmSpecificContentInPackage>
  </PropertyGroup>

  <!-- Target to add the merged analyzer DLL to the package -->
  <Target Name="PackAnalyzerDll">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(TargetPath)" PackagePath="analyzers/dotnet/cs/" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <!-- Required packages for source generators -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" PrivateAssets="all" />
    <PackageReference Include="PolySharp" PrivateAssets="all" />
    <!-- ILRepack to merge Shared DLL into generator DLL -->
    <PackageReference Include="ILRepack.Lib.MSBuild.Task" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference the shared library for TemplateUtilities -->
    <ProjectReference Include="../Whizbang.Generators.Shared/Whizbang.Generators.Shared.csproj">
      <PrivateAssets>all</PrivateAssets>
      <ReferenceOutputAssembly>true</ReferenceOutputAssembly>
      <!-- Don't use OutputItemType=Analyzer for Shared - it needs to be copied as a regular dependency -->
      <SetTargetFramework>TargetFramework=netstandard2.0</SetTargetFramework>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <!-- Template files - these are real C# code that gets full analyzer support -->
    <!-- BUT they must be excluded from compilation since they reference types not in this project -->
    <Compile Remove="Templates\**\*.cs" />
    <!-- Include as content so IDE can analyze them -->
    <None Include="Templates\**\*.cs" />
    <!-- Embed as resources so generator can read them at runtime -->
    <EmbeddedResource Include="Templates\**\*.cs" />
    <!-- Embed SQL migration files as resources from shared Whizbang.Data.Postgres project -->
    <!-- Link attribute maintains the same resource path (Templates\Migrations\*.sql) for the generator -->
    <EmbeddedResource Include="..\Whizbang.Data.Postgres\Migrations\*.sql" Link="Templates\Migrations\%(Filename)%(Extension)" />
  </ItemGroup>

  <!-- Note: Cannot reference Whizbang.Core directly due to TFM incompatibility -->
  <!-- (netstandard2.0 vs net10.0). Generator uses fully qualified type names instead. -->

</Project>
